/* AI Advisor - Professional Trading Platform Styles */
/* Financial/Professional Aesthetic with Modern Minimalism */

@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap');

:root {
  /* Colors - Financial Theme */
  --color-bg: #0a0e27;
  --color-bg-light: #141938;
  --color-bg-card: #1a1f3a;
  --color-bg-elevated: #242b4a;
  
  --color-text: #e8eaf0;
  --color-text-muted: #9ca3c0;
  --color-text-dim: #6b7280;
  
  --color-primary: #3b82f6;
  --color-primary-light: #60a5fa;
  
  --color-success: #10b981;
  --color-success-light: #34d399;
  --color-success-bg: rgba(16, 185, 129, 0.1);
  
  --color-danger: #ef4444;
  --color-danger-light: #f87171;
  --color-danger-bg: rgba(239, 68, 68, 0.1);
  
  --color-warning: #f59e0b;
  --color-warning-light: #fbbf24;
  
  --color-info: #06b6d4;
  --color-info-light: #22d3ee;
  
  --color-border: rgba(255, 255, 255, 0.1);
  --color-border-light: rgba(255, 255, 255, 0.05);
  
  /* Shadows */
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5);
  --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.6);
  
  /* Typography */
  --font-sans: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-mono: 'JetBrains Mono', 'Courier New', monospace;
  
  /* Spacing */
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  
  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  
  /* Transitions */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: var(--font-sans);
  background: var(--color-bg);
  color: var(--color-text);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
}

/* Header */
.header {
  background: var(--color-bg-card);
  border-bottom: 1px solid var(--color-border);
  padding: var(--spacing-lg) 0;
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10px);
  background: rgba(26, 31, 58, 0.9);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--spacing-lg);
}

.brand {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.logo {
  width: 40px;
  height: 40px;
  color: var(--color-primary);
  animation: pulse-slow 3s ease-in-out infinite;
}

@keyframes pulse-slow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.brand-text h1 {
  font-size: 1.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--color-primary), var(--color-info));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.brand-text p {
  font-size: 0.75rem;
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.last-update {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: 0.875rem;
  color: var(--color-text-muted);
  font-family: var(--font-mono);
}

.pulse {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--color-success);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.2);
  }
}

.refresh-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--color-bg-elevated);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  color: var(--color-text);
  cursor: pointer;
  font-family: var(--font-sans);
  font-size: 0.875rem;
  font-weight: 500;
  transition: all var(--transition-base);
}

.refresh-btn:hover:not(:disabled) {
  background: var(--color-primary);
  border-color: var(--color-primary);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.refresh-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-lg);
  margin: var(--spacing-2xl) 0;
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stat-card {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  transition: all var(--transition-base);
}

.stat-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--color-primary);
}

.stat-icon {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.stat-icon.total {
  background: linear-gradient(135deg, var(--color-primary), var(--color-info));
}

.stat-icon.pullback {
  background: linear-gradient(135deg, var(--color-success), var(--color-success-light));
}

.stat-icon.ema {
  background: linear-gradient(135deg, var(--color-info), var(--color-primary));
}

.stat-icon.priority {
  background: linear-gradient(135deg, var(--color-warning), var(--color-warning-light));
}

.stat-content {
  flex: 1;
}

.stat-value {
  font-size: 2rem;
  font-weight: 700;
  font-family: var(--font-mono);
  line-height: 1;
  margin-bottom: var(--spacing-xs);
}

.stat-label {
  font-size: 0.875rem;
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
}

/* Filters */
.filters {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  padding: var(--spacing-xl);
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  margin-bottom: var(--spacing-2xl);
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.filter-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.filter-group label {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.filter-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.filter-buttons button {
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--color-bg-elevated);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  color: var(--color-text);
  cursor: pointer;
  font-family: var(--font-sans);
  font-size: 0.875rem;
  font-weight: 500;
  transition: all var(--transition-base);
}

.filter-buttons button:hover {
  background: var(--color-bg-light);
  border-color: var(--color-primary);
}

.filter-buttons button.active {
  background: var(--color-primary);
  border-color: var(--color-primary);
  color: white;
}

/* Signals Grid */
.signals-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-2xl);
}

.signal-card {
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  transition: all var(--transition-base);
  animation: fadeInUp 0.5s ease-out both;
  position: relative;
  overflow: hidden;
}

.signal-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--color-primary), var(--color-info));
  opacity: 0;
  transition: opacity var(--transition-base);
}

.signal-card.pullback::before {
  background: linear-gradient(90deg, var(--color-success), var(--color-success-light));
}

.signal-card.ema-cross::before {
  background: linear-gradient(90deg, var(--color-info), var(--color-primary));
}

.signal-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--color-primary);
}

.signal-card:hover::before {
  opacity: 1;
}

.signal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
}

.signal-ticker {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.priority-star {
  font-size: 1.25rem;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.1) rotate(5deg); }
}

.ticker {
  font-size: 1.5rem;
  font-weight: 700;
  font-family: var(--font-mono);
}

.stock-type {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  border-radius: var(--radius-sm);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stock-type.blue-chip {
  background: rgba(59, 130, 246, 0.2);
  color: var(--color-primary-light);
}

.stock-type.mid-cap {
  background: rgba(6, 182, 212, 0.2);
  color: var(--color-info-light);
}

.stock-type.penny {
  background: rgba(245, 158, 11, 0.2);
  color: var(--color-warning-light);
}

.strategy-badge {
  padding: 0.375rem 0.75rem;
  border-radius: var(--radius-md);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.strategy-badge.pullback {
  background: var(--color-success-bg);
  color: var(--color-success-light);
  border: 1px solid var(--color-success);
}

.strategy-badge.ema-cross {
  background: rgba(6, 182, 212, 0.1);
  color: var(--color-info-light);
  border: 1px solid var(--color-info);
}

/* Strength Bar */
.strength-container {
  margin-bottom: var(--spacing-md);
}

.strength-bar {
  height: 6px;
  background: var(--color-bg-elevated);
  border-radius: var(--radius-sm);
  overflow: hidden;
  margin-bottom: var(--spacing-xs);
}

.strength-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-success), var(--color-success-light));
  transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
}

.strength-label {
  font-size: 0.75rem;
  color: var(--color-text-muted);
  font-family: var(--font-mono);
}

/* Price Grid */
.price-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--color-bg);
  border-radius: var(--radius-md);
}

.price-item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.price-item label {
  font-size: 0.75rem;
  color: var(--color-text-dim);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
}

.price-value {
  font-size: 1.125rem;
  font-weight: 600;
  font-family: var(--font-mono);
}

.price-item.entry .price-value {
  color: var(--color-text);
}

.price-item.stop-loss .price-value {
  color: var(--color-danger-light);
}

.price-item.take-profit .price-value {
  color: var(--color-success-light);
}

.price-change {
  font-size: 0.75rem;
  font-family: var(--font-mono);
  font-weight: 500;
}

.stop-loss .price-change {
  color: var(--color-danger);
}

.take-profit .price-change {
  color: var(--color-success);
}

/* Risk/Reward */
.risk-reward {
  padding: var(--spacing-md);
  background: var(--color-bg);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-md);
}

.risk-reward label {
  font-size: 0.75rem;
  color: var(--color-text-dim);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
  display: block;
  margin-bottom: 0.25rem;
}

.rr-value {
  font-size: 1.25rem;
  font-weight: 700;
  font-family: var(--font-mono);
  color: var(--color-success-light);
}

/* Additional Info */
.additional-info {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--color-border-light);
}

.info-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 0.875rem;
}

.info-label {
  color: var(--color-text-dim);
  font-weight: 500;
}

.info-value {
  color: var(--color-text);
  font-family: var(--font-mono);
  font-weight: 500;
}

/* Loading State */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-2xl);
  gap: var(--spacing-lg);
}

.spinner {
  width: 48px;
  height: 48px;
  border: 4px solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: var(--spacing-2xl);
  color: var(--color-text-muted);
}

.empty-state svg {
  margin: 0 auto var(--spacing-lg);
}

.empty-state h3 {
  font-size: 1.25rem;
  margin-bottom: var(--spacing-sm);
  color: var(--color-text);
}

/* Footer */
.footer {
  margin-top: auto;
  padding: var(--spacing-2xl) 0;
  border-top: 1px solid var(--color-border);
  text-align: center;
  color: var(--color-text-muted);
  font-size: 0.875rem;
}

.disclaimer {
  margin-top: var(--spacing-sm);
  font-size: 0.75rem;
  color: var(--color-text-dim);
}

/* Responsive Design */
@media (max-width: 768px) {
  .header-content {
    flex-direction: column;
    text-align: center;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .signals-grid {
    grid-template-columns: 1fr;
  }
  
  .price-grid {
    grid-template-columns: 1fr;
  }
  
  .filter-group {
    width: 100%;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 var(--spacing-md);
  }
  
  .stat-value {
    font-size: 1.5rem;
  }
  
  .ticker {
    font-size: 1.25rem;
  }
}
